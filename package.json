{
	"name": "secret-santa-app",
	"version": "1.0.0",
	"keywords": [],
	"author": "",
	"license": "ISC",
	"description": "",
	"private": true,
	"scripts": {
		"start-dev": "run-p start-dev-*",
		"start-dev-server": "cd server && nodemon src/server.js",
		"start-dev-client": "cd client && webpack-dev-server .",
		"build-client": "cd client && set NODE_ENV=production && webpack .",
		"start-server": "cd server && node src/server.js",
		"lint": "eslint . --fix",
		"lint-css": "stylelint **/**/*.scss --fix",
		"format": "prettier . --ignore-path .eslintignore --write",
		"fix-all": "npm run lint && npm run lint-css && npm run format",
		"test": "npm run test-client && npm run test-server",
		"test-client": "jest client --testEnvironment=jsdom --detectOpenHandles --forceExit",
		"test-server": "jest server --testEnvironment=node --detectOpenHandles --testTimeout=5000 --forceExit",
		"clean": "cd client && npx rimraf dist",
		"prepare": "husky install"
	},
	"eslintConfig": {
		"extends": [
			"react-app",
			"react-app/jest"
		]
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"devDependencies": {
		"@babel/cli": "^7.24.8",
		"@babel/core": "^7.25.2",
		"@babel/preset-env": "^7.25.3",
		"@babel/preset-react": "^7.24.7",
		"@eslint/js": "^9.8.0",
		"@testing-library/jest-dom": "^6.4.8",
		"@testing-library/react": "^16.0.0",
		"@testing-library/user-event": "^14.5.2",
		"@trivago/prettier-plugin-sort-imports": "^4.3.0",
		"babel-loader": "^9.1.3",
		"clean-webpack-plugin": "^4.0.0",
		"copy-webpack-plugin": "^12.0.2",
		"cross-env": "^7.0.3",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-jest": "^28.6.0",
		"eslint-plugin-jsx-a11y": "^6.9.0",
		"eslint-plugin-prettier": "^5.2.1",
		"eslint-plugin-react": "^7.35.0",
		"eslint-plugin-react-hooks": "^4.6.2",
		"globals": "^15.9.0",
		"html-webpack-plugin": "^5.6.0",
		"husky": "^9.1.4",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"mini-css-extract-plugin": "^2.9.0",
		"nodemon": "^3.1.4",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.40",
		"postcss-loader": "^8.1.1",
		"postcss-preset-env": "^9.6.0",
		"prettier": "3.3.3",
		"prettier-eslint": "^16.3.0",
		"prettier-eslint-cli": "^8.0.1",
		"prop-types": "^15.8.1",
		"sass": "^1.77.8",
		"sass-loader": "^16.0.0",
		"stylelint": "^16.8.1",
		"stylelint-config-standard": "^36.0.1",
		"stylelint-config-standard-scss": "^13.1.0",
		"stylelint-order": "^6.0.4",
		"supertest": "^7.0.0",
		"webpack": "^5.93.0",
		"webpack-cli": "^5.1.4",
		"webpack-dev-server": "^5.0.4"
	},
	"dependencies": {
		"@reduxjs/toolkit": "^2.2.7",
		"axios": "^1.7.3",
		"bcrypt": "^5.1.1",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"crypto": "^1.0.1",
		"css-loader": "^7.1.2",
		"dotenv": "^16.4.5",
		"express": "^4.19.2",
		"express-async-handler": "^1.2.0",
		"express-session": "^1.18.0",
		"helmet": "^7.1.0",
		"jsonwebtoken": "^9.0.2",
		"mongoose": "^8.5.2",
		"morgan": "^1.10.0",
		"passport": "^0.7.0",
		"passport-jwt": "^4.0.1",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"react-redux": "^9.1.2",
		"react-router-dom": "^6.26.0",
		"redux-persist": "^6.0.0"
	},
	"lint-staged": {
		"*.js": "npm run lint",
		"*.{js,md,html,json}": "npm run format",
		"*.{css,scss}": "npm run lint-css"
	}
}
